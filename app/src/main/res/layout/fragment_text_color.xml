<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnYellow"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/btn_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnBlue"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/btn_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRed"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnRed"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_red"
        app:layout_constraintStart_toStartOf="@+id/btnYellow"
        app:layout_constraintTop_toBottomOf="@+id/btnYellow"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnGreen"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRed"
        app:layout_constraintTop_toBottomOf="@+id/btnBlue"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGreen"
        app:layout_constraintVertical_bias="0.353" />

    <Button
        android:id="@+id/btnBackToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green"
        android:text="@string/main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScore" />

    <TextView
        android:id="@+id/tvMode"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Farba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Modrá"
        app:layout_constraintStart_toStartOf="@+id/tvMode"
        app:layout_constraintTop_toBottomOf="@+id/tvMode" />

    <TextView
        android:id="@+id/tvSeconds"
        android:layout_width="57dp"
        android:layout_height="78dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="80dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSecondsTitle"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Čas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMode" />
</androidx.constraintlayout.widget.ConstraintLayout>